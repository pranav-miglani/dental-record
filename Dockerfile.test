# Dockerfile for running tests
FROM node:20-alpine

# Install dependencies for building native modules and AWS CLI
RUN apk add --no-cache \
    python3 \
    py3-pip \
    make \
    g++ \
    curl \
    chromium \
    chromium-chromedriver \
    bash

# Install AWS CLI
RUN pip3 install --no-cache-dir awscli || echo "AWS CLI installation failed, will use alternative method"

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Set environment variables for tests
ENV NODE_ENV=test
ENV CHROME_BIN=/usr/bin/chromium-browser
ENV CHROMEDRIVER_PATH=/usr/bin/chromedriver

# Expose test ports (if needed)
EXPOSE 3000

# Default command (can be overridden)
CMD ["npm", "run", "test:docker"]

