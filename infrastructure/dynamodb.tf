/**
 * DynamoDB Tables Configuration
 * 
 * This file creates all DynamoDB tables required for the application:
 * - users: User accounts and authentication
 * - patients: Patient records
 * - user_patient_mappings: User-patient relationships
 * - procedures: Dental procedures
 * - procedure_steps: Steps within procedures
 * - images: Medical images with versioning
 * - consent: Patient consent records
 * - audit_logs: System audit trail
 * 
 * All tables use on-demand billing for cost optimization.
 */

# ============================================================================
# Users Table
# ============================================================================
resource "aws_dynamodb_table" "users" {
  name           = "${local.name_prefix}-users"
  billing_mode   = "PAY_PER_REQUEST" # On-demand billing (no capacity planning needed)
  hash_key       = "PK"
  range_key      = "SK"

  attribute {
    name = "PK"
    type = "S"
  }

  attribute {
    name = "SK"
    type = "S"
  }

  # GSI1: mobile-index (for login by mobile number)
  attribute {
    name = "GSI1PK"
    type = "S"
  }

  attribute {
    name = "GSI1SK"
    type = "S"
  }

  # GSI2: role-index (for query by role)
  attribute {
    name = "GSI2PK"
    type = "S"
  }

  attribute {
    name = "GSI2SK"
    type = "S"
  }

  # GSI3: panel-index (for query by panel ID)
  attribute {
    name = "GSI3PK"
    type = "S"
  }

  attribute {
    name = "GSI3SK"
    type = "S"
  }

  global_secondary_index {
    name            = "mobile-index"
    hash_key        = "GSI1PK"
    range_key       = "GSI1SK"
    projection_type = "ALL"
  }

  global_secondary_index {
    name            = "role-index"
    hash_key        = "GSI2PK"
    range_key       = "GSI2SK"
    projection_type = "ALL"
  }

  global_secondary_index {
    name            = "panel-index"
    hash_key        = "GSI3PK"
    range_key       = "GSI3SK"
    projection_type = "ALL"
  }

  # Enable point-in-time recovery for backup
  point_in_time_recovery {
    enabled = true
  }

  # Enable encryption at rest
  server_side_encryption {
    enabled = true
  }

  tags = local.common_tags
}

